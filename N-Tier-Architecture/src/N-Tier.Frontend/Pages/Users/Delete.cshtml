@page
@model N_Tier.Frontend.Pages.Users.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<div class="alert alert-warning" role="alert">
    <p>
        <strong>By deleting this user you will permanently remove their account and data, and this cannot be recovered.</strong>
    </p>
</div>

<div>
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <button class="w-100 btn btn-lg btn-danger" type="submit">Delete user</button>
    </form>
</div>
