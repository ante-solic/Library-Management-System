@page
@using N_Tier.Core.Enums
@model N_Tier.Frontend.Pages.Books.EditModel
@{
    ViewData["Title"] = "Edit";
}


<h1>Edit Book</h1>

<h4>Book</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="updateBookModel.Availability" class="control-label"></label>
                <select asp-for="updateBookModel.Availability" class="form-control">
                    <option value="true">True</option>
                    <option value="false">False</option>
                </select>
                <span asp-validation-for="updateBookModel.Availability" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <select asp-for="updateBookModel.Status" class="form-control">
                        <option value="Available">Available</option>
                        <option value="Disabled">Disabled</option>
                </select>
                <label asp-for="updateBookModel.Status"></label>
                <span asp-validation-for="updateBookModel.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Work">Works</label>
                <select class="form-control" asp-for="updateBookModel.WorkId">
                    <option value=@null> Please select work</option>
                    @foreach (var work in Model.Works)
                    {
                        <option value="@work.Id" selected="@(work.Id == Model.updateBookModel.WorkId ? true : false)">@work.Title</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="updateBookModel.ReleaseDate" class="control-label"></label>
                <input asp-for="updateBookModel.ReleaseDate" class="form-control" type="date" asp-format="{0:yyyy-MM-dd}" />
            </div>
            <div class="form-group" style="margin-top: 10px;">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-outline-primary ml-2">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
