@page
@model N_Tier.Frontend.Pages.Loans.CreateModel
@{
    ViewData["Title"] = "Create";
}

<h1>Make new Loan</h1>

<h4>Loan</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">

            <input type="hidden" name="customerId" value="@Model.CustomerId">
            <input type="hidden" name="librarianId" value="@Model.LibrarianId">

            <div class="form-group">
                <label for="Books">Books</label>
                <select class="form-control" asp-for="Loan.BookId">
                    <option selected>Please select a book</option>
                    @foreach (var book in Model.Books)
                    {
                        <option value="@book.Id">@book.Work.Title</option>
                    }
                </select>
            </div>

            <div class="form-group" style="margin-top: 10px;">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-outline-primary ml-2">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
