@page
@model N_Tier.Frontend.Pages.Authors.DeleteModel
@{
    ViewData["Title"] = "Delete";
}


<div class="alert alert-warning" role="alert">
    <p>
        <strong>This action cannot be recovered. The author will be permanently deleted.</strong>
    </p>
</div>

<div>
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <button class="w-100 btn btn-lg btn-danger" type="submit">Delete author</button>
    </form>
</div>
